@page
@model assignment4.Pages.Employees.DetailsModel

@{
    ViewData["Title"] = Model.Employee.FullName;
}

<h1>@ViewBag.Title</h1>

<div>
   
    <hr />
    <dl class="row">
        
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.HireDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.HireDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.City)
        </dd> 
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Region)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Region)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.PostalCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.HomePhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.HomePhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Extension)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Extension)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Notes)
        </dd>

        @if (Model.Employee.ReportsToNavigation != null)
        {
            <dt class="col-sm-2">Reports To</dt>
            <dd class="col-sm-2">
                
                    @Model.Employee.ReportsToNavigation.FullName
               
            </dd>
        }
       
        
    </dl>
</div>
<div class="col-6">

    <div class="images col-16">
        @if (!string.IsNullOrEmpty(Model.Employee.PhotoPath))
        {
            @if (Model.Employee.PhotoPath.StartsWith("~") || Model.Employee.PhotoPath.StartsWith("/"))
            {
                <img src="@Url.Content(Model.Employee.PhotoPath)" class="card-img-top"
                     alt="@Model.Employee.FullName" style="height: auto; object-fit: cover;">
            }
            else
            {
                <img src="@Url.Content($"~/Images/{Model.Employee.PhotoPath}")" class="card-img-top"
                     alt="@Model.Employee.FullName" style="height: auto; object-fit: cover;">
            }
        }
        else
        {
            <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                 style="height: 400px;">
                <i class="fas fa-user fa-5x text-muted"></i>
            </div>
        }


    </div>

</div>
<br />


<div>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Employee.EmployeeId">Edit</a> 
    <a class="btn btn-danger"  asp-page="./Delete" asp-route-id="@Model.Employee.EmployeeId">Delete</a>
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</div>


                   